<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="EducationPU" transaction-type="JTA">
    <jta-data-source>java:app/jdbc/eduction</jta-data-source>
    <class>com.education.models.Student</class>
    <class>com.school.models.Course</class>
    <class>com.school.models.Instructor</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="javax.persistence.sql-load-script-source" value="file:/home/mohamedk/NetBeansProjects/EE-project/web/WEB-INF/sql/Education.sql"/>
    </properties>
  </persistence-unit>
</persistence>
